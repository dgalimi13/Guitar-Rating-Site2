    <% if params[:guitar_id] %>
    <h1>Add a Review for <%= @review.guitar.model %> - <%= @review.guitar.make.name%></h1>
    <% else %>
    <h1>Create a review </h1>
    <% end %>

    <%= render partial: 'layouts/errors', locals: {object: @review} %>

    <%= form_for(@review) do |f|%>
        <% if params[:guitar_id] %>
        <%= f.hidden_field :guitar_id %>
        <% else %>
        <div>
        <%= f.label :guitar_id, "Select a Guitar" %>
        <%= f.collection_select :guitar_id, Guitar.all, :id, :model_and_make, include_blank: true %>
        </div>
        <% end %>
    <div>
    <%= f.label :stars %>
    <%= f.number_field :stars, min:0, max:5 %>
    </div>
    
    <br>
    <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>
    <br>
    <div>
    <%= f.label :content %>
    <%= f.text_area :content, size: "25x10" %>
    </div>
    <br>
    

    <%= f.submit %>
<% end %>