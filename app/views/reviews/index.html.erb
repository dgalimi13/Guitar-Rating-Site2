<% if @guitar %>
    <h1>Reviews for <%= @guitar.model%> - <%= @guitar.make_name%>
<% else %>
<h1>All the Reviews </h1>
<% end %>

<ul>
<% @reviews.each do |review| %>

  <li>
  <%= review.guitar.make.name%> - <%= review.guitar.model%>: <%= review.title%> - <%= review.stars%> added by <%= review.user.username%>
    <br>
  </li> <br>

<% end %>
</ul>