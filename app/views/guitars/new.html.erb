<h1>Make a new Guitar!</h1>

<%= render partial: 'layouts/errors', locals: {object: @guitar}   %>

<%= form_for(@guitar) do |f|%>
    <div>
    <%= f.label :model %>
    <%= f.text_field :model %>
    </div>
    <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>

    <p> Select a Make that already exists: </p>
    <div>
    <%= f.collection_select :make_id, Make.all, :id, :name, include_blank: 'Select One' %>

    </div>

    <p> Or create a new Make: </p>
    <div>
    <%= f.fields_for :make do |m| %>
        <%= m.label :name %>
        <%= m.text_field :name %>
        <% end %>
        </div>
        <br>
    <%= f.submit %>
    <% end %>

